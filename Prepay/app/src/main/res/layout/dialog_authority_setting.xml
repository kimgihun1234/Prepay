    <TextView
        android:id="@+id/authority_setting_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/samsung_font_2"
        android:text="사용자 이름"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/authority_dummy1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/samsung_font_2"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_marginBottom="4dp"
        android:text="회식 결제 권한을 부여하시겠습니까?" />

    <TextView
        android:id="@+id/authority_dummy2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/samsung_font_2"
        android:textColor="@color/black"
        android:text="권한은 그룹 관리 기능을 통해서 다시 수정할 수 있습니다." />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/autority_setting_confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="권한 부여"
            android:textColor="@color/text_main_color"
            android:fontFamily="@font/samsung_font_2"
            app:backgroundTint="@color/checked_color"
            android:layout_marginEnd="4dp"
            app:cornerRadius="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/autority_setting_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="취소"
            android:textColor="@color/text_main_color"
            android:fontFamily="@font/samsung_font_2"
            app:backgroundTint="@color/nav_unselected_color"
            app:cornerRadius="12dp"/>

    </LinearLayout>
