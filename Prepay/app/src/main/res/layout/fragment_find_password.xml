<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.Login.FindPasswordFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/samsung_font_2"
        android:text="비밀번호 찾기"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/authentication_confirm"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:text="확인"
        app:layout_constraintEnd_toEndOf="@+id/authentication_btn"
        app:layout_constraintTop_toTopOf="@+id/email_authentication_text" />

    <EditText
        android:id="@+id/email_authentication_text2"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:background="@drawable/shape_all_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/go_login"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:text="비밀번호 찾기"
        android:background="@drawable/submit_button_style"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_confirm_text" />

    <TextView
        android:id="@+id/password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:text="새로운 비밀번호 2차 확인"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/password_confirm_text"
        app:layout_constraintStart_toStartOf="@+id/password_confirm_text" />

    <EditText
        android:id="@+id/new_password_text"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/shape_all_round"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_authentication_text" />

    <EditText
        android:background="@drawable/shape_all_round"
        android:id="@+id/password_confirm_text"
        android:layout_width="328dp"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_password_text" />

    <EditText
        android:id="@+id/email_authentication_text"
        android:layout_width="232dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/shape_all_round"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toStartOf="@+id/authentication_confirm"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/email_authentication_text2"
        app:layout_constraintTop_toBottomOf="@+id/email_authentication_text2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/authentication_btn"
        android:layout_width="123dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/submit_button_style"
        android:text="인증 번호 전송"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/email_authentication_text2"
        app:layout_constraintTop_toBottomOf="@+id/email_authentication_text2" />

    <TextView
        android:id="@+id/new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:text="새로운 비밀번호를 입력해 주세요"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/new_password_text"
        app:layout_constraintStart_toStartOf="@+id/new_password_text" />

    <TextView
        android:id="@+id/member_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="12dp"
        android:text="인증이 필요합니다"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/email_authentication_text2"
        app:layout_constraintStart_toStartOf="@+id/email_authentication_text2" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:text="발급 받은 코드를 입력해 주세요"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/email_authentication_text"
        app:layout_constraintStart_toStartOf="@+id/email_authentication_text" />


</androidx.constraintlayout.widget.ConstraintLayout>