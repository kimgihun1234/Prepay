<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@android:color/white">

    <!-- 상단 안내 메시지 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/round_invite_txt_backgound"
        android:paddingBottom="16dp">

        <!-- 이미지 아이콘 -->
        <ImageView
            android:id="@+id/invite_code_iv_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/dog_logo"
            android:contentDescription="Icon"
            android:layout_marginEnd="8dp" />

        <!-- 안내 텍스트 -->
        <TextView
            android:id="@+id/invite_code_tv_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:text="초대 코드는 3시간 후 자동 폐기됩니다\n접속이 안 될 경우 관리자에게 다시 요청해주세요"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/invite_code_tv_input_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="초대 코드"
        android:textColor="@color/text_main_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/et_invite_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_background"
        android:padding="12dp"
        android:textSize="14sp"
        android:inputType="text"
        android:fontFamily="sans-serif" />

    <!-- 하단 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/invite_code_confirm_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="확인"
            android:background="@drawable/grouptext_round_backgound"
            app:backgroundTint="@null"
            android:textColor="@android:color/white" />
        <Button
            android:id="@+id/invite_code_cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:background="@drawable/round_background"
            app:backgroundTint="@null"
            android:text="취소"
            android:textColor="@color/text_main_color" />

    </LinearLayout>
</LinearLayout>